    <!-- header -->
    <header class="fixed-top header">
      <!-- top header -->
      <div class="top-header py-2 bg-white">
        <div class="container">
          <div class="row no-gutters">
            <div class="col-lg-8 text-center text-lg-right">
              <ul class="list-inline">
                {% if app.user %}
                <li class="list-inline-item">
                
                  <a href=" {{ path('area_user') }}" class=" text-uppercase text-color p-sm-2 py-2 px-0 d-inline-block"><i class=" ti-user text-primary"></i>
                  {{app.user.firstName}}</a> 
                </li>
                <li class="list-inline-item">
                  <a href="{{ path('logout') }}" class="text-uppercase text-color p-sm-2 py-2 px-0 d-inline-block"><i class=" ti-power-off  text-primary"></i> Se déconnecter </a>            
                </li>
                {% else %}
                    
                <li class="list-inline-item">
                  <a
                    class="text-uppercase text-color p-sm-2 py-2 px-0 d-inline-block"
                    href="#"
                    data-toggle="modal"
                    data-target="#loginModal"
                    >se connecter </a
                  >
                </li>
                <li class="list-inline-item">
                  <a
                    class="text-uppercase text-color p-sm-2 py-2 px-0 d-inline-block"
                    href="#"
                    data-toggle="modal"
                    data-target="#signupModal"
                    >s'inscrire</a
                  >
                </li>
                  
                {% endif %}             
               
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!-- navbar -->
      <div class="navigation w-100">
        <div class="container">
          <nav class="navbar navbar-expand-lg navbar-light p-0">
            <a class="navbar-brand" href="{{ path ('home') }}"
              ><img src="{{ asset ('assets/images/favicon-32x32.png')}}" alt="logo"
            /></a>
            <button
              class="navbar-toggler rounded-0"
              type="button"
              data-toggle="collapse"
              data-target="#navigation"
              aria-controls="navigation"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navigation">
              <ul class="navbar-nav ml-auto text-center">
                <li class="nav-item active">
                  <a class="nav-link" href="{{ path ('home') }}">KINA </a>
                </li>                
                {# <li class="nav-item @@courses"> #}
                <li class="nav-item @@activites">
                  <a class="nav-link" href="{{ path ('activites') }}">Les activités</a>
                </li>
                <li class="nav-item @@blog">
                  <a class="nav-link" href="{{ path ('translations') }}">Les textes traduites</a>
                </li>
                <li class="nav-item @@teacher">
                  <a class="nav-link" href="{{ path ('team') }}">L'équipe</a>
                </li>
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </header>
    <!-- /header -->
    <!-- Modal -->
    <div
      class="modal fade"
      id="signupModal"
      tabindex="-1"
      role="dialog"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content rounded-0 border-0 p-4">
          <div class="modal-header border-0">
            
            <h3>S'inscrire</h3>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <div class="login">
              {% include "registration/register.html.twig" %}                        

        
            
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Modal   LOGIN-->
    <div
      class="modal fade"
      id="loginModal"
      tabindex="-1"
      role="dialog"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content rounded-0 border-0 p-4">
          <div class="modal-header border-0">
           
            <h3>Se connecter</h3>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
         	  {% include "security/login.html.twig" %}
   
          </div>
        </div>
      </div>
    </div>
    <!-- end Modal -->